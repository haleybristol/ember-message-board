{{#if addNewAnswer}}
  <h1>Answer:</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Answer This!</button>
{{/if}}
