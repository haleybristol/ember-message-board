{{#if addNewQuestion}}
  <h1>What's Up?</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Question:</label>
            {{textarea value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="author">Name:</label>
            {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Notes:</label>
            {{textarea value=notes id="notes"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
